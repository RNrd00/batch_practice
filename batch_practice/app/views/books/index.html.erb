<h1>Books</h1>
<% @books.each do |book2| %>
<table class="index-title">
  <thead>
    <tr>
    <th class="none">Title</th> <th class="none">Body</th> <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= book2.title %></td>
      <td><%= book2.body %></td>
      <td><%= link_to "Show",book_path(book2.id) %></td>
      <td><%= link_to "Edit",edit_book_path(book2.id) %></td>
      <td><%= link_to "Destroy",book_path(book2.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      <br>
    </tr>
  </tbody>
</table>
<%end%>

<%=form_with model: @book2, url: '/books', method: :post do |f| %>
<h2 class="index-new-book">New book</h2>

<div class="error-message">
<% if @book2.errors.any? %>
<%= @book2.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book2.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<p class="index-p1">Title</p>
<%=f.text_field :title %>

<p class="index-p2">Body</p>
<%=f.text_area :body%>
<br>
<p class="index-p2">
<%=f.submit 'Create Book' %>
</p>
<%end%>